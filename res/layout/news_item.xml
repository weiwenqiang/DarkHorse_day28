<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <com.loopj.android.image.SmartImageView
        android:id="@+id/newsitem_image"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/newsitem_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/newsitem_image"
        android:singleLine="true"
        android:text="这是大标题"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/newsitem_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/newsitem_title"
        android:layout_toRightOf="@id/newsitem_image"
        android:lines="2"
        android:text="这是内容阿斯蒂芬去玩儿自行车花费多少个去问题仍然新增词让你变得问非所答分"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/newsitem_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/newsitem_detail"
        android:singleLine="true"
        android:text="6545241条评论"
        android:textColor="#ff0000"
        android:textSize="14sp" />

</RelativeLayout>